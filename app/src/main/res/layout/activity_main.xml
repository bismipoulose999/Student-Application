<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#5D7173"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:text="Name"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/sname"
            android:textColor="#5C0223"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Roll No"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/srollno"
            android:textColor="#5C0223"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Admission Number"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/sadmission"
            android:textColor="#5C0223"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="College"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/scollege"
            android:textColor="#5C0223"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Parent Name"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/pname"
            android:textColor="#5C0223"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Parent mail ID"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/pmail"
            android:textColor="#5C0223"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Parent Mobile No"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/pmob"
            android:textColor="#5C0223"
            android:inputType="number"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="User Name"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/username"
            android:textColor="#5C0223"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Password"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/spassword"
            android:textColor="#5C0223"
            android:inputType="textPassword"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Confirm Password"

            android:textStyle="bold"
            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="#5C0223"
            android:inputType="textPassword"

            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:onClick="Registerevent"
            android:text="REGISTER"
            android:textStyle="bold"

            android:textColor="#5C0223"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>